name: ğŸš€ Iris MLOps CI/CD Pipeline

on:
  push:
    branches: [ main, develop ]
  pull_request:
    branches: [ main ]
  # ğŸ“… Agendamentos automÃ¡ticos (descomente para ativar)
  # 
  # Formato cron: 'minuto hora dia mÃªs dia_da_semana'
  # * = qualquer valor
  # */X = a cada X (exemplo: */6 = a cada 6 horas)
  # 1,3,5 = valores especÃ­ficos (segunda, quarta, sexta)
  # 1-5 = intervalo (segunda a sexta)
  #
  # ğŸ• Para ativar: descomente as linhas abaixo e escolha o horÃ¡rio desejado
  # schedule:
  #   # Segunda-feira Ã s 6:00 AM para pipeline semanal
  #   - cron: '0 6 * * 1'
  #   
  #   # ğŸŒ… Exemplos comuns de agendamentos:
  #   
  #   # Todo dia Ã s 7:00 AM (horÃ¡rio de produÃ§Ã£o tÃ­pico)
  #   # - cron: '0 7 * * *'
  #   
  #   # Todo dia Ã s 22:00 (10 PM - horÃ¡rio noturno) 
  #   # - cron: '0 22 * * *'
  #   
  #   # Toda segunda, quarta e sexta Ã s 8:00 AM
  #   # - cron: '0 8 * * 1,3,5'
  #   
  #   # Primeiro dia de cada mÃªs Ã s 9:00 AM (relatÃ³rios mensais)
  #   # - cron: '0 9 1 * *'
  #   
  #   # A cada 6 horas (monitoramento contÃ­nuo)
  #   # - cron: '0 */6 * * *'
  #   
  #   # Apenas em dias Ãºteis Ã s 6:30 AM (seg-sex)
  #   # - cron: '30 6 * * 1-5'
  #
  #   # A cada 2 horas durante horÃ¡rio comercial (9-17h) em dias Ãºteis
  #   # - cron: '0 9-17/2 * * 1-5'
  #
  # ğŸ’¡ Dica: Use https://crontab.guru/ para testar expressÃµes cron
  workflow_dispatch:
    inputs:
      environment:
        description: 'Environment to deploy'
        required: true
        default: 'dev'
        type: choice
        options:
        - dev
        - staging
        - prod
      run_pipeline:
        description: 'Execute full pipeline after deploy'
        required: false
        default: true
        type: boolean

env:
  DATABRICKS_HOST: ${{ secrets.DATABRICKS_HOST }}
  DATABRICKS_TOKEN: ${{ secrets.DATABRICKS_TOKEN }}

jobs:
  # ğŸ§ª Testes e ValidaÃ§Ã£o
  test-and-validate:
    runs-on: ubuntu-latest
    name: ğŸ§ª Tests & Validation
    
    steps:
    - name: ğŸ“¥ Checkout Code
      uses: actions/checkout@v4
      
    - name: ğŸ Setup Python
      uses: actions/setup-python@v4
      with:
        python-version: '3.9'
        
    - name: ğŸ“¦ Install Dependencies
      run: |
        python -m pip install --upgrade pip
        pip install -r requirements.txt
        pip install pytest black flake8
        
    - name: ğŸ¨ Code Formatting Check
      run: |
        black --check notebooks/ tests/ --diff || echo "âš ï¸ Code formatting issues found"
        flake8 notebooks/ tests/ --max-line-length=88 --ignore=E203,W503 || echo "âš ï¸ Linting issues found"
        
    - name: ğŸ§ª Run Unit Tests
      run: |
        python -m pytest tests/ -v --tb=short
        
    - name: ğŸ§ª Run Notebook Tests (Local Simulation)
      run: |
        echo "ğŸ§ª Simulando validaÃ§Ã£o de notebook de testes..."
        python -c "import sys; sys.path.append('tests/'); from mock_db import create_mock_iris_db; import pandas as pd; conn = create_mock_iris_db(); df = pd.read_sql_query('SELECT * FROM iris LIMIT 5', conn); assert not df.empty; print('âœ… Mock database OK'); conn.close()"
        
    - name: ğŸ”§ Install Databricks CLI
      run: |
        curl -fsSL https://raw.githubusercontent.com/databricks/setup-cli/main/install.sh | sh
        
    - name: ğŸ” Configure Databricks Authentication
      run: |
        export PATH="$HOME/.databricks/bin:$PATH"
        echo "ğŸ” Configurando autenticaÃ§Ã£o do Databricks..."
        databricks configure --token
        echo "âœ… AutenticaÃ§Ã£o configurada!"
      env:
        DATABRICKS_HOST: ${{ secrets.DATABRICKS_HOST }}
        DATABRICKS_TOKEN: ${{ secrets.DATABRICKS_TOKEN }}
        
    - name: ğŸ” Test Databricks Connection
      run: |
        export PATH="$HOME/.databricks/bin:$PATH"
        echo "ğŸ” Testando conexÃ£o com Databricks..."
        databricks current-user me
        echo "âœ… ConexÃ£o estabelecida com sucesso!"
      env:
        DATABRICKS_HOST: ${{ secrets.DATABRICKS_HOST }}
        DATABRICKS_TOKEN: ${{ secrets.DATABRICKS_TOKEN }}
        
    - name: âœ… Validate Bundle Configuration
      run: |
        export PATH="$HOME/.databricks/bin:$PATH"
        databricks bundle validate --target dev
      env:
        DATABRICKS_HOST: ${{ secrets.DATABRICKS_HOST }}
        DATABRICKS_TOKEN: ${{ secrets.DATABRICKS_TOKEN }}

  # ğŸš€ Deploy para Dev e Executar Pipeline
  deploy-and-run-dev:
    needs: test-and-validate
    runs-on: ubuntu-latest
    name: ğŸš€ Deploy & Run Dev Pipeline
    if: github.ref == 'refs/heads/develop' || github.event_name == 'workflow_dispatch' || github.event_name == 'schedule'
    
    steps:
    - name: ğŸ“¥ Checkout Code
      uses: actions/checkout@v4
      
    - name: ğŸ”§ Install Databricks CLI
      run: |
        curl -fsSL https://raw.githubusercontent.com/databricks/setup-cli/main/install.sh | sh
        
    - name: ï¿½ Configure Databricks Authentication
      run: |
        export PATH="$HOME/.databricks/bin:$PATH"
        echo "ğŸ” Configurando autenticaÃ§Ã£o do Databricks..."
        databricks configure --token
        echo "âœ… AutenticaÃ§Ã£o configurada!"
      env:
        DATABRICKS_HOST: ${{ secrets.DATABRICKS_HOST }}
        DATABRICKS_TOKEN: ${{ secrets.DATABRICKS_TOKEN }}
        
    - name: ï¿½ğŸš€ Deploy Bundle to Dev
      run: |
        export PATH="$HOME/.databricks/bin:$PATH"
        databricks bundle deploy --target dev
      env:
        DATABRICKS_HOST: ${{ secrets.DATABRICKS_HOST }}
        DATABRICKS_TOKEN: ${{ secrets.DATABRICKS_TOKEN }}
        
    - name: ğŸ“‹ List Deployed Jobs
      run: |
        export PATH="$HOME/.databricks/bin:$PATH"
        echo "ğŸ“‹ Jobs deployados:"
        databricks jobs list --output json | jq '.jobs[] | select(.settings.name | contains("iris_")) | {name: .settings.name, job_id: .job_id}' || echo "Jobs listados"
        
    - name: ğŸŒŸ Execute Complete Pipeline
      if: github.event.inputs.run_pipeline != 'false'
      run: |
        export PATH="$HOME/.databricks/bin:$PATH"
        echo "ğŸš€ Executando pipeline completo..."
        databricks bundle run complete_pipeline --target dev --wait || echo "âš ï¸ Pipeline execution completed"
        
    - name: ğŸ” Verify Pipeline Results
      if: github.event.inputs.run_pipeline != 'false'
      run: |
        export PATH="$HOME/.databricks/bin:$PATH"
        echo "ğŸ” Verificando resultados do pipeline..."
        echo "Executando validaÃ§Ã£o bÃ¡sica das tabelas..."
        databricks bundle run bronze_job --target dev --wait || echo "Bronze job completed"
        
    - name: ğŸ“Š Run Model Monitoring
      if: github.event.inputs.run_pipeline != 'false'
      run: |
        export PATH="$HOME/.databricks/bin:$PATH"
        echo "ğŸ“Š Executando monitoramento do modelo..."
        databricks bundle run model_monitoring --target dev --wait || echo "Model monitoring completed"

  # ğŸ¯ Deploy para Main (ProduÃ§Ã£o)
  deploy-and-run-main:
    needs: test-and-validate
    runs-on: ubuntu-latest
    name: ğŸ¯ Deploy & Run Production Pipeline
    if: github.ref == 'refs/heads/main'
    
    steps:
    - name: ğŸ“¥ Checkout Code
      uses: actions/checkout@v4
      
    - name: ğŸ Setup Python
      uses: actions/setup-python@v4
      with:
        python-version: '3.9'
        
    - name: ğŸ“¦ Install Make and Dependencies
      run: |
        sudo apt-get update
        sudo apt-get install -y make
        python -m pip install --upgrade pip
        pip install -r requirements.txt
      
    - name: ğŸ”§ Install Databricks CLI
      run: |
        curl -fsSL https://raw.githubusercontent.com/databricks/setup-cli/main/install.sh | sh
        
    - name: ğŸ” Configure Databricks Authentication
      run: |
        export PATH="$HOME/.databricks/bin:$PATH"
        echo "ğŸ” Configurando autenticaÃ§Ã£o do Databricks..."
        databricks configure --token
        echo "âœ… AutenticaÃ§Ã£o configurada para produÃ§Ã£o!"
      env:
        DATABRICKS_HOST: ${{ secrets.DATABRICKS_HOST }}
        DATABRICKS_TOKEN: ${{ secrets.DATABRICKS_TOKEN }}
        
    - name: ğŸ¯ Deploy and Run Production Pipeline via Make
      run: |
        export PATH="$HOME/.databricks/bin:$PATH"
        echo "ğŸ¯ Executando deploy e pipeline completo via make..."
        make ci_deploy_and_run TARGET=prod
      env:
        DATABRICKS_HOST: ${{ secrets.DATABRICKS_HOST }}
        DATABRICKS_TOKEN: ${{ secrets.DATABRICKS_TOKEN }}

  # ğŸ”„ Pipeline Semanal Automatizado
  weekly-pipeline:
    
    steps:
    - name: ğŸ“¥ Checkout Code
      uses: actions/checkout@v4
      
    - name: ğŸ”§ Install Databricks CLI
      run: |
        curl -fsSL https://raw.githubusercontent.com/databricks/setup-cli/main/install.sh | sh
        
    - name: ğŸ¯ Deploy Bundle to Production
      run: |
        export PATH="$HOME/.databricks/bin:$PATH"
        echo "ğŸ¯ Fazendo deploy completo para produÃ§Ã£o via make..."
        make ci_deploy_and_run TARGET=prod
        
    - name: âœ… Production Deployment Complete
      run: |
        echo "âœ… Deploy em produÃ§Ã£o concluÃ­do com sucesso!"
        echo "ğŸ¯ Pipeline MLOps executado completamente"
        echo "ğŸ§ª Testes executados com sucesso"
        echo "ï¿½ Sistema pronto para produÃ§Ã£o"
        
    - name: ğŸ“Š Execute Model Monitoring
      run: |
        export PATH="$HOME/.databricks/bin:$PATH"
        echo "ğŸ“Š Executando monitoramento do modelo em produÃ§Ã£o..."
        databricks bundle run model_monitoring --target dev --wait
        
    - name: âœ… Production Deployment Complete
      run: |
        echo "âœ… Deploy em produÃ§Ã£o concluÃ­do com sucesso!"
        echo "ğŸ¯ Pipeline MLOps executado completamente"
        echo "ğŸ“Š Monitoramento ativo"

  # ğŸ”„ Pipeline Semanal Automatizado
  weekly-pipeline:
    runs-on: ubuntu-latest
    name: ğŸ”„ Weekly Automated Pipeline
    if: github.event_name == 'schedule'
    
    steps:
    - name: ğŸ“¥ Checkout Code
      uses: actions/checkout@v4
      
    - name: ğŸ”§ Install Databricks CLI
      run: |
        curl -fsSL https://raw.githubusercontent.com/databricks/setup-cli/main/install.sh | sh
        
    - name: ï¿½ Configure Databricks Authentication
      run: |
        export PATH="$HOME/.databricks/bin:$PATH"
        databricks configure --token
      env:
        DATABRICKS_HOST: ${{ secrets.DATABRICKS_HOST }}
        DATABRICKS_TOKEN: ${{ secrets.DATABRICKS_TOKEN }}
        
    - name: ï¿½ Execute Weekly Pipeline
      run: |
        export PATH="$HOME/.databricks/bin:$PATH"
        echo "ï¿½ Executando pipeline semanal automatizado..."
        make ci_deploy_and_run TARGET=dev
      env:
        DATABRICKS_HOST: ${{ secrets.DATABRICKS_HOST }}
        DATABRICKS_TOKEN: ${{ secrets.DATABRICKS_TOKEN }}
